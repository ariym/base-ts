{
  "name": "base-ts",
  "version": "0.1.0",
  "author": "ariym",
  "description": "Boilerplate and template for typecsript projects.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "tsx --watch --env-file=.env src/index.ts",
    "build": "pkgroll --env-file=.env index.ts",
    "prod": "npm run build && node dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "pkgroll": "^2.6.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
